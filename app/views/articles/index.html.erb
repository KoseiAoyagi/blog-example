<p id="notice"><%= notice %></p>

<h1>記事一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th><%= link_to 'タイトル', sort: 'title' %></th>
      <th><%= link_to 'ユーザー', sort: 'writer' %></th>
      <th>内容</th>
      <th>限定記事</th>
      <th><%= link_to '作成日時', sort: 'created_at' %></th>
      <th><%= link_to '更新日時', sort: 'updated_at' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.writer %></td>
        <td><%= article.contents %></td>
        <td><%= article.memberOnly %></td>
        <td><%= article.created_at %></td>
        <td><%= article.updated_at %></td>
        <td width="45"><%= link_to '詳細', article %></td>
        <td width="45"><%= link_to '編集', edit_article_path(article) %></td>
        <td width="45"><%= link_to '削除', article, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

